# Project Configuration
# This file documents the project structure and configuration
# Safe to commit to git (contains no secrets)

[project]
name = "AI-Powered Automation Portfolio"
version = "2.0.0"
description = "Full-stack automation system with Python backend and Next.js frontend"
repository = "https://github.com/Ariadne-Nexus/nexus-core"
homepage = "https://ariadnenexus.com"

[stack]
# Backend
python_version = "3.11+"
python_framework = "Standard library + OpenAI + PyGithub"
automation_runner = "scripts/daily_v2.py"

# Frontend
node_version = "18+"
nextjs_version = "16.0.0"
react_version = "19.2.0"
typescript = "strict mode"
styling = "Tailwind CSS 4"

# Infrastructure
deployment = "Vercel (automatic from main branch)"
ci_cd = "GitHub Actions"
monitoring = "Built-in health check endpoints"

[directories]
# Core directories
automation = "scripts/"
output = "output/"
notes_input = "output/notes/"
audit_logs = "output/audit_*.json"
backups = "output/backups/"

# Frontend
app_router = "app/"
api_routes = "app/api/"
components = "components/"
public_assets = "public/"

# Environment
python_venv = "venv/"
node_modules = "node_modules/"
build_output = ".next/"

[commands]
# Python automation
python_demo = "python3 scripts/daily_v2.py --demo"
python_prod = "python3 scripts/daily_v2.py"
python_setup = "python3 -m venv venv && source venv/bin/activate && pip install -r scripts/requirements.txt"

# Next.js
nextjs_dev = "npm run dev"
nextjs_build = "npm run build"
nextjs_start = "npm start"
nextjs_lint = "npm run lint"

# Testing
validate_all = "bash scripts/validate.sh"
test_api = "curl http://localhost:3000/api/status | jq"

# Deployment
deploy = "git push origin main"  # Triggers Vercel auto-deploy

[endpoints]
# Production URLs
homepage = "https://ariadnenexus.com"
daily_summary = "https://ariadnenexus.com/api/daily-summary"
status = "https://ariadnenexus.com/api/status"
health = "https://ariadnenexus.com/api/health"
demo = "https://ariadnenexus.com/api/demo/view"

# Development URLs (when running locally)
local_dev = "http://localhost:3000"
local_api = "http://localhost:3000/api/daily-summary"

[environment_variables]
# Required for production mode (add to .env.local)
OPENAI_API_KEY = "OpenAI API key for GPT-4 Turbo"
GITHUB_TOKEN = "GitHub PAT with repo scope"
REPO_NAME = "Target repository (owner/repo format)"

# Optional (with defaults)
OUTPUT_DIR = "./output (default)"
NOTES_SOURCE = "./output/notes (default)"

[features]
# Automation capabilities
note_ingestion = "Reads .md and .txt files from notes directory"
ai_summarization = "GPT-4 Turbo generates structured summaries"
github_integration = "Auto-creates labeled issues from action items"
json_output = "Structured data for API consumption"
audit_logging = "Timestamped logs for compliance"
demo_mode = "Works without API keys for testing"

# Frontend capabilities
api_routes = "RESTful JSON endpoints"
health_checks = "Comprehensive monitoring endpoints"
react_dashboard = "Modern component-based UI"
automatic_deployment = "Push to main = live deployment"

[documentation]
readme = "README.md (comprehensive guide)"
automation_guide = "AUTOMATION_GUIDE.md (detailed automation docs)"
quickstart = "QUICKSTART.md (quick reference)"
demo = "DEMO.md (step-by-step demo)"
copilot_instructions = ".copilot-instructions.md (AI assistant guide)"
fixes_summary = "FIXES_SUMMARY.md (change log)"
contributing = ".github/CONTRIBUTING.md (PR guidelines)"

[testing]
# Test coverage
python_demo_mode = "Tests automation without API calls"
nextjs_build = "Validates TypeScript and Next.js compilation"
eslint = "Code quality checks"
validation_script = "scripts/validate.sh (31 automated checks)"
ci_tests = "GitHub Actions on every push/PR"

[architecture]
# Data flow
flow = "Notes → Python → JSON → API Route → React Component → User"

# Integration points
python_to_json = "scripts/daily_v2.py writes to output/daily_summary.json"
json_to_api = "app/api/daily-summary/route.ts serves the JSON"
api_to_ui = "components/DailySummaryPanel.tsx fetches and renders"
sync_script = "scripts/sync-to-frontend.sh handles backups"

[portfolio_highlights]
# What this project demonstrates
automation_engineering = "Production Python automation with error handling"
api_integration = "OpenAI + GitHub APIs with fallback mechanisms"
full_stack = "Backend automation + frontend dashboard"
devops = "CI/CD, health checks, deployment automation"
documentation = "Comprehensive docs for handoff and maintenance"
demo_ready = "Works out-of-box with demo mode"

[upwork_one_liner]
pitch = "Full-stack automation system that transforms daily notes into AI-generated summaries and GitHub issues, deployed on Vercel with comprehensive testing and documentation"

[contact]
website = "https://automation.link"
github = "https://github.com/dotlink-ops"
repository_issues = "https://github.com/dotlink-ops/nextjs/issues"
